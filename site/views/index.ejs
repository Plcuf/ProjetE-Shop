<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Bonk Shop </title>
    <link rel="stylesheet" href="../assets/style/index.css">
    <link rel="stylesheet" href="../assets/style/header.css">
</head>
<body>
    <header>
        <%- include('./header'); %>
    </header>

    <div class="sort">
        <input type="radio" id="croissant" name="sort" value="price" checked>
        <label for="croissant"> Prix (croissant) </label>
        <input type="radio" id="decroissant" name="sort" value="price">
        <label for="decroissant"> Prix (décroissant) </label>
    </div>

    <div class="items">
        <% listProducts.forEach(function(item) { %>
            <a class="item" href="produit/<%= item.id %>">
                <div class="images">
                    <img src="<%= item.images[0].path %>">
                    <img class="underlay" src="<%= item.images[1].path %>">
                </div>
                <div class="infos">
                    <p> <%= item.Name %> </p>
                    <div class="price"> 
                        <% if (item.Promo != item.Price) { %>
                        <p class="reduction"> <%= item.Price %> € </p>
                        <% } %>
                        <p> <%= item.Promo %>€ </p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>

    <%- include('./footer'); %>
</body>
</html>